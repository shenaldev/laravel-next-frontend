{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@tanstack/query/recommended"
  ],
  "plugins": ["check-file"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "check-file/filename-naming-convention": [
      "error",
      {
        "**/*.{ts,tsx}": "KEBAB_CASE"
      },
      {
        "ignoreMiddleExtensions": true
      }
    ],
    "check-file/folder-naming-convention": [
      "error",
      {
        "src/**/!^[.*": "KEBAB_CASE"
      }
    ]
  }
}
